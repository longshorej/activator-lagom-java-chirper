{
  "apiVersion": "extensions/v1beta1",
  "kind": "Ingress",
  "metadata": {
    "name": "chirper-ingress"
  },
  "spec": {
    "rules": [
      {
        "http": {
          "paths": [
            {
              "path": "/api/activity",
              "backend": {
                "serviceName": "activityservice",
                "servicePort": 9000
              }
            },
            {
              "path": "/api/users",
              "backend": {
                "serviceName": "friendservice",
                "servicePort": 9000
              }
            },
            {
              "path": "/api/chirps",
              "backend": {
                "serviceName": "chirpservice",
                "servicePort": 9000
              }
            },
            {
              "backend": {
                "serviceName": "web",
                "servicePort": 9000
              }
            }
          ]
        }
      }
    ]
  }
}